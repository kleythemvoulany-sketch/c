rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for the listings folder
    match /listings/{allPaths=**} {
      allow read: if true;                // Allow everyone to view images
      allow write: if request.auth != null; // Only authenticated users can upload
    }

    // Rules for all other files
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
