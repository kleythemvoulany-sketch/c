rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is necessary for users to see listing images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes (uploads) only for authenticated users on files
    // within the 'listings' folder.
    match /listings/{imageId} {
      allow write: if request.auth != null;
    }
  }
}
