rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // السماح بقراءة جميع الصور للجميع
    match /listings/{allPaths=**} {
      allow read;
      // السماح بالكتابة (الرفع، التعديل، الحذف) فقط للمستخدمين المسجلين دخولهم
      allow write: if request.auth != null;
    }
  }
}
