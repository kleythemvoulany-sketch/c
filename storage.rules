rules_version = '2';

// Access to Firebase Storage
service firebase.storage {
  // For all files in your Firebase Storage bucket
  match /b/{bucket}/o {
    // For all paths in your bucket
    match /{allPaths=**} {
      // Allow public read access to all files.
      // This is useful for public images, like profile pictures or listings.
      allow read;

      // Allow write access (create, update, delete) only for authenticated users.
      // This prevents anonymous users from uploading or deleting files.
      allow write: if request.auth != null;
    }
  }
}
